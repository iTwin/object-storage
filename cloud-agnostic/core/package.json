{
  "name": "@itwin/cloud-agnostic-core",
  "version": "1.4.0",
  "description": "Package that allows configuring components loaded by dependency injection",
  "keywords": [
    "Bentley",
    "iTwin",
    "iTwin platform"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/object-storage"
  },
  "homepage": "https://github.com/iTwin/object-storage/tree/main/cloud-agnostic/core",
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "https://www.bentley.com"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc 1>&2",
    "clean": "rimraf lib",
    "lint": "eslint ./src/**/*.ts 1>&2",
    "lint-fix": "eslint --fix ./src/**/*.ts 1>&2 && sort-package-json",
    "spell-check": "cspell \"**\" --config ./node_modules/@itwin/object-storage-common-config/cspell.json",
    "test:integration:backend": "",
    "test:integration:frontend": "",
    "test:unit": "npm run test:unit:backend && npm run test:unit:frontend",
    "test:unit:backend": "mocha lib/**/*.test.js",
    "test:unit:frontend": "cypress run --browser chrome --config-file node_modules/@itwin/object-storage-common-config/cypress.json -c integrationFolder=lib/test"
  },
  "prettier": "@itwin/object-storage-common-config/prettier.json",
  "eslintConfig": {
    "extends": "./node_modules/@itwin/object-storage-common-config/.eslintrc.json"
  },
  "dependencies": {
    "inversify": "~5.0.1",
    "reflect-metadata": "~0.1.13"
  },
  "devDependencies": {
    "@itwin/object-storage-common-config": "workspace:*",
    "@types/chai": "^4.1.7",
    "@types/mocha": "~10.0.1",
    "chai": "^4.2.0",
    "cspell": "~5.18.5",
    "cypress": "~9.5.4",
    "eslint": "~7.32.0",
    "mocha": "~10.2.0",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.2",
    "sort-package-json": "~1.53.1",
    "typescript": "~4.7.4"
  },
  "engines": {
    "node": ">=12.20 <19.0.0"
  }
}
