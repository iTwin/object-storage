{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "../../../lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "../../../src/**/*.ts"
  ],
}
