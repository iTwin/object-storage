    {
      "name": "-- Backend Integration Tests --"
    },
    {
      "name": "Backend Azure Integration tests",
      "cwd": "${workspaceFolder}/storage/azure",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:backend"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Backend OSS Integration tests",
      "cwd": "${workspaceFolder}/storage/oss",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
