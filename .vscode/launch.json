      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:frontend"
      ],
      "env": {
        "DEBUG": "1"
      }
    },
    {
      "name": "Frontend Minio Integration tests (Tests only)",
      "cwd": "${workspaceFolder}/storage/minio",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:frontend:startServerRunTests"
      ],
      "env": {
        "DEBUG": "1"
      }
    },
    {
      "name": "-- Samples --"
    },
    {
      "name": "Client file download with `inversify` sample",
      "cwd": "${workspaceFolder}/samples/lib/with-inversify",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "Run.js"
      ],
      "outFiles": [
        "${workspaceFolder}/samples/lib/**/*.js",
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
