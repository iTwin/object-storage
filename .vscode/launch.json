{
  "configurations": [
    {
      "name": "-- Unit Tests --"
    },
    {
      "name": "Storage Core Unit tests",
      "cwd": "${workspaceFolder}/storage/core",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Azure Unit tests",
      "cwd": "${workspaceFolder}/storage/azure",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "S3 Unit tests",
      "cwd": "${workspaceFolder}/storage/s3",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "-- Integration Tests --"
    },
    {
      "name": "Azure Integration tests",
      "cwd": "${workspaceFolder}/storage/azure",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/storage/azure/src/test/integration/.env"
    },
    {
      "name": "Azure Integration tests - Frontend",
      "cwd": "${workspaceFolder}/storage/azure",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:frontend"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
      // "envFile": "${workspaceFolder}/storage/azure/src/test/integration/.env"
    },
    {
      "name": "OSS Integration tests",
      "cwd": "${workspaceFolder}/storage/oss",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/storage/oss/src/test/.env"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Cypress Chrome",
      "port": 9222,
      "urlFilter": "http://localhost*",
      "webRoot": "${workspaceFolder}/storage/azure-cypress",
      "sourceMaps": true,
      // "skipFiles": [
      //   "cypress_runner.js",
      // ],
    },
    {
      "name": "MinIO Integration tests (Environment setup and tests)",
      "cwd": "${workspaceFolder}/storage/minio",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "MinIO Integration tests (Tests only)",
      "cwd": "${workspaceFolder}/storage/minio",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:runTests"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "-- Samples --"
    },
    {
      "name": "Client file download with `inversify` sample",
      "cwd": "${workspaceFolder}/samples/lib/with-inversify",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "Run.js"
      ],
      "outFiles": [
        "${workspaceFolder}/samples/lib/**/*.js",
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Client file download without `inversify` sample",
      "cwd": "${workspaceFolder}/samples/lib/without-inversify",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "Run.js"
      ],
      "outFiles": [
        "${workspaceFolder}/samples/lib/**/*.js",
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
  ]
}