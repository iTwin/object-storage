    },
    {
      "name": "Backend MinIO Integration tests (Tests only)",
      "cwd": "${workspaceFolder}/storage/minio",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:backend:runTests"
      ],
      "outFiles": [
        "${workspaceFolder}/*/*/lib/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "-- Frontend Integration Tests --"
    },
    {
      "name": "Frontend Azure Integration tests",
      "cwd": "${workspaceFolder}/storage/azure",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:integration:frontend"
      ],
      "env": {
        "DEBUG": "1"
      }
    },
    {
      "name": "Frontend OSS Integration tests",
      "cwd": "${workspaceFolder}/storage/oss",
      "type": "pwa-node",
