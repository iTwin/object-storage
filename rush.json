{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.88.0",
  "pnpmVersion": "6.13.0",
  "ensureConsistentVersions": true,
  "projectFolderMinDepth": 1,
  "projectFolderMaxDepth": 2,
  "repository": {
    "url": "https://github.com/iTwin/object-storage",
    "defaultBranch": "main",
    "defaultRemote": "origin"
  },
  "projects": [
    {
      "packageName": "@itwin/cloud-agnostic-core",
      "projectFolder": "cloud-agnostic/core",
      "versionPolicyName": "lockStepVersionObjectStorage"
    },
    {
      "packageName": "@itwin/object-storage-core",
      "projectFolder": "storage/core",
      "versionPolicyName": "lockStepVersionObjectStorage"
    },
    {
      "packageName": "@itwin/object-storage-s3",
      "projectFolder": "storage/s3",
      "versionPolicyName": "lockStepVersionObjectStorage"
    },
    {
      "packageName": "@itwin/object-storage-azure",
      "projectFolder": "storage/azure",
      "versionPolicyName": "lockStepVersionObjectStorage",
      "tags": [ "integration-tested" ]
    },
    {
      "packageName": "@itwin/object-storage-google",
      "projectFolder": "storage/google",
      "versionPolicyName": "lockStepVersionObjectStorage",
      "tags": [ "integration-tested" ]
    },
    {
      "packageName": "@itwin/object-storage-minio",
      "projectFolder": "storage/minio",
      "versionPolicyName": "lockStepVersionObjectStorage",
      "tags": [ "integration-tested" ]
    },
    {
      "packageName": "@itwin/object-storage-oss",
      "projectFolder": "storage/oss",
      "versionPolicyName": "lockStepVersionObjectStorage"
    },
    {
      "packageName": "@itwin/object-storage-tests-backend",
      "projectFolder": "tests/backend-storage",
      "shouldPublish": false
    },
    {
      "packageName": "@itwin/object-storage-tests-backend-unit",
      "projectFolder": "tests/backend-storage-unit",
      "shouldPublish": false
    },
    {
      "packageName": "@itwin/object-storage-tests-frontend",
      "projectFolder": "tests/frontend-storage",
      "shouldPublish": false
    },
    {
      "packageName": "@itwin/object-storage-common-config",
      "projectFolder": "utils/common-config",
      "shouldPublish": false
    },
    {
      "packageName": "@itwin/object-storage-samples",
      "projectFolder": "samples",
      "shouldPublish": false
    }
  ]
}
