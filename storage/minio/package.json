{
  "name": "@itwin/object-storage-minio",
  "version": "0.0.1-dev.1",
  "description": "Object storage implementation using Minio",
  "keywords": [
    "Bentley",
    "iTwin",
    "iTwin platform",
    "Object storage",
    "Minio"
  ],
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "https://www.bentley.com"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc 1>&2",
    "clean": "rimraf lib",
    "lint": "eslint ./src/**/*.ts 1>&2",
    "lint-fix": "eslint --fix ./src/**/*.ts 1>&2 && sort-package-json",
    "spell-check": "cspell ** --config ./node_modules/@itwin/object-storage-common-config/cspell.json",
    "test": "",
    "test:integration": "npm run test:integration:minio:createBucket && npm-run-all -p -r test:integration:minio:start test:integration:runTests",
    "test:integration:runTests": "wait-on tcp:9000 -t 30000 && node lib/test/RunIntegrationTests.js",
    "test:integration:minio:createBucket": "node -e \"const testBucketPath = path.join('lib', 'test', 'storage', 'integration-test'); if(!fs.existsSync(testBucketPath)) fs.mkdirSync(testBucketPath, { recursive: true });\"",
    "test:integration:minio:start": "cd lib/test && (minio server storage || ./minio server storage)"
  },
  "prettier": "@itwin/object-storage-common-config/prettier.json",
  "eslintConfig": {
    "extends": "./node_modules/@itwin/object-storage-common-config/.eslintrc.json"
  },
  "dependencies": {
    "@itwin/object-storage-core": "workspace:*",
    "@itwin/object-storage-s3": "workspace:*",
    "inversify": "~5.0.1",
    "minio": "~7.0.23",
    "reflect-metadata": "~0.1.13"
  },
  "devDependencies": {
    "@bentley/build-tools": "~2.19.9",
    "@itwin/object-storage-common-config": "workspace:*",
    "@itwin/object-storage-tests": "workspace:*",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/minio": "~7.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cspell": "~5.18.5",
    "eslint": "~7.32.0",
    "mocha": "^8.3.2",
    "npm-run-all": "~4.1.5",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.2",
    "sort-package-json": "~1.53.1",
    "typescript": "~4.3.0",
    "wait-on": "~6.0.1"
  },
  "engines": {
    "node": ">=12.20 <17.0.0"
  }
}